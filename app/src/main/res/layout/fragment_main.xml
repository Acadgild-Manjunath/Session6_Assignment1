<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acadgild.com.session6_assignment1.MainFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/editTextFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontSize"
        android:hint="Enter text here..."/>

    <Button
        android:id="@+id/btnFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btnLayout"
        android:text="@string/btnText"/>

    <TextView android:id="@+id/textViewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/fontSize"
        android:layout_marginTop="@dimen/textViewLayout"
        android:hint="Result here..."
        android:background="@color/colorAccent"/>



</FrameLayout>
